<h1>Controle de Ve√≠culos</h1>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th>Motorista</th>
      <th>Placa</th>
      <th>Entrada</th>
      <th>Saida</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.driver %></td>
        <td><%= vehicle.board %></td>
        <td><%= vehicle.entry.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= vehicle.exit.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= vehicle.obs %></td>
        <td><%= link_to 'Exibir', vehicle, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_vehicle_path(vehicle), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Deletar', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

