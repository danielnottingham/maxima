<p id="notice"><%= notice %></p>
<%= form_tag(vehicles_path, :method => :get, class: "form-inline my-2 my-lg-0") do %>
<p>
  <%= text_field_tag :search_by_key, params[:search_by_key] , class: "form-control mr-sm-2", placeholder: 'Digite sua pesquisa'%>
  <%= submit_tag 'Buscar', class: "btn btn-outline-success my-2 my-sm-0" %>
</p>
<% end %>

<h1>Controle de Ve√≠culos</h1>
<p>
<%= link_to 'Novo controle', new_vehicle_path, class: 'btn btn-primary' %>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th>Motorista</th>
      <th>Placa</th>
      <th>Entrada</th>
      <th>Saida</th>
      <th>Obs</th>
      <th><%= link_to vehicles_path(format: :pdf), class: 'btn btn-danger' do %>
            <i class='fa fa-file-pdf-o'>PDF</i>
          <% end %>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.driver %></td>
        <td><%= vehicle.board %></td>
        <td><%= vehicle.entry.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= vehicle.exit.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= vehicle.obs %></td>
        <td><%= link_to 'Exibir', vehicle, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_vehicle_path(vehicle), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Deletar', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


